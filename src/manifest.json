{
	"name": "PlanetSide 2 Alerts",
	"short_name": "PS2 Alerts",
	"version": "0.1.2",
	"manifest_version": 2,

	"description": "Easy overview over PlanetSide2 Alerts in Chrome.",
	"icons": {
		"128": "img/alert.png",
		"16": "img/alert.png",
		"48": "img/alert.png"
	},
	"author": "Jacob Gro√ü (kurtextrem)",

	"background": {
	    	"scripts": ["js/jquery.min.js", "js/background.js"],
	    	"persistent": false
	},

	"browser_action": {
	    	"default_icon": {
	      		"19": "img/notification_tray_empty.png",
	      		"38": "img/notification_tray_empty.png"
		},
	    	"default_popup": "popup.html"
	},
	"options_page": "settings.html",
	"permissions": ["http://census.soe.com/get/ps2:v2/*", "storage", "alarms", "notifications"]

}